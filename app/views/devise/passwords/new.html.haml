.container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      .account-wall
        .logo.login
          MOJA<span>LEPOTA</span>
        %h4.text-center Forgot your password?
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'form form-signin', method: :post }) do |f|
          = devise_error_messages!
          = f.email_field :email, autofocus: false, :placeholder => "Enter your email address" , :class => 'form-control'
          %br
          .actions
            = f.submit "Request new password", :class => 'btn btn-lg btn-primary btn-block'
      .text-center.new-account
        = render "devise/shared/links"
