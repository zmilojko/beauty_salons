- if notice
  %p#notice= notice
%div.row
  %div.col-md-6
    %h3.lead.pull-left.search
      Rezulati pretrage za:
      %b
        = params[:search]
      %br
    %div.pull-left.search_count
      Pronađeno salona:
      = @number_of_results
  %div.col-md-6
    - if location_is_know and  @number_of_results != 1
      .dropdown.pull-right.search
        Prikaži prvo:
        %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
          - if params[:sort] == "dalje"
            dalje
          - else
            bliže
          %span.caret
        %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
          %li= link_to 'prvo bliže', url_for(:search => params[:search])
          %li= link_to 'prvo dalje', url_for( :sort => 'dalje', :search => params[:search])
.clearfix
- @salons.each do |salon|
  = render 'salons/salon_list', salon: salon
= link_to 'New Salon', new_salon_path, class: "btn btn-success pull-right"
