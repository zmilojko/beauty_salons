%div.row
  %div.col-md-6
    %h3.lead.pull-left.search
      Saloni
      %br
    %div.pull-left.search_count
      Ukupno salona:
      = @number_of_results
  -if location_is_know
    = render 'salons/salon_filter'
- @salons.each do |salon|
  = render 'salons/salon_list', salon: salon
= will_paginate @salons, :param_name => t('will_paginate.page'), renderer: BootstrapPagination::Rails
- if user_signed_in?
  - if current_user.control.to_i == 0
    = link_to 'New Salon', new_salon_path, class: "btn btn-success pull-right"
