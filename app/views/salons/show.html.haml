.panel.panel-default
  .panel-heading
    = @salon.name
    = link_to 'Edit', edit_salon_path(@salon),class: "btn btn-info pull-right"
  .panel-body
    .row
      .col-md-4
        = image_tag "default.png"
        %hr
          %address
            %strong Adresa:
            = @salon.address
            %br
              \&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Beograd, Zemun
              %br
                %br
                  %strong Telefon:
                  %a{:href => "tel:+381606624730"} 060/6624-730
                  %br
                    %br
                      %strong Email:
                      %a{:href => "mailto:#"}
                        info@#{@salon.permalink}.com
                      %br
                        %br
                          %strong Web:
                          %a{:href => "salon.com"}
                            = @salon.permalink
                            \.com
          #map_canvas{:style => "height:200px;min-height:10px;"}
      .col-md-8
        = @salon.description
:javascript
  var map = new google.maps.Map(document.getElementById('map_canvas'), {
      zoom: 15,
      center: new google.maps.LatLng( #{@salon.lat} , #{@salon.lng} ),
      mapTypeId: google.maps.MapTypeId.ROADMAP
  });

  var myMarker = new google.maps.Marker({
      position: new google.maps.LatLng( #{@salon.lat} , #{@salon.lng} ),
      draggable: true
  });

  google.maps.event.addListener(myMarker, 'dragend', function (evt) {
    var salon_lat = document.getElementById("salon_lat");
  salon_lat.value = evt.latLng.lat().toFixed(9);

  var salon_lng = document.getElementById("salon_lng");
  salon_lng.value = evt.latLng.lng().toFixed(9);
  });
  map.setCenter(myMarker.position);
  myMarker.setMap(map);
= link_to 'Edit', edit_salon_path(@salon)
