%h3.lead.pull-left= @service.name
.dropdown.pull-right
  Prikaži prvo:
  %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
    - if !params[:sort]
      jeftinije
    - if params[:sort] == "skuplji"
      skuplje
    - if params[:sort] == "blizi"
      bliže
    - if params[:sort] == "dalji"
      dalje
    %span.caret
  %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
    %li= link_to 'prvo jeftinije', url_for()
    %li= link_to 'prvo skuplji', url_for( :sort => 'skuplji' )
    - if location_is_know
      %li= link_to 'prvo bliže', url_for( :sort => 'blizi' )
      %li= link_to 'prvo dalje', url_for( :sort => 'dalji' )
.clearfix
- @salons.each do |salon|
  = render 'salons/salon_list', salon: salon
= link_to 'Edit this service', edit_service_path(@service),  class: "btn btn-warning"
= link_to 'New Service', new_service_path,  class: "btn btn-success"
